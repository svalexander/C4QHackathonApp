<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_vertical_margin">

        <View
            android:id="@+id/divider"
            android:layout_width="385dp"
            android:layout_height="1dp"
            android:layout_centerHorizontal="true"
            android:background="@color/dividerColor" />


        <TextView
            android:id="@+id/urg_facility_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:paddingBottom="2dp"
            android:paddingTop="26dp"
            android:text="Facility Name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/urg_borough"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/urg_facility_name"
            android:paddingBottom="3dp"
            android:text="Queens"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/urg_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/urg_borough"
            android:paddingBottom="3dp"
            android:text="16 E 24th Street"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/urg_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/urg_address"
            android:text="999-9999"
            android:textSize="16dp" />

        <ImageButton
            android:id="@+id/fave_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/urg_address"
            android:alpha="0.35"
            android:paddingRight="20dp"
            android:background="@null"
            android:src="@drawable/heart" />


        <ImageButton
            android:id="@+id/share_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/urg_address"
            android:layout_toLeftOf="@id/fave_btn"
            android:alpha="0.35"
            android:paddingRight="12dp"
            android:src="@drawable/share_variant"
            android:background="@null"
            android:layout_alignBottom="@+id/fave_btn" />


    </RelativeLayout>

</RelativeLayout>